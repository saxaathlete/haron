<% content_for :title do %>
  Харон - изготовление памятников, венков и ритуальных товаров.
<% end %>
<% content_for :header do %>
  <h1 class="title">Новости</h1>
<% end %>
<% content_for :content do %>
  <% @articles.each do |article| %>

      <h1 class="title"><%= article.title %></h1>
      <div class="entry">
        <%= article.description %>

      </div>
      <div class="meta">
        <p class="byline"><%= l(article.created_at, :format => :my) %></p>
        <p class="links"><%= link_to_remote "Читать дальше→",  :url => { :action => "show_article", :id => article}%></p>
      </div>


  <%end%>

  <div style="clear:both;"></div>
  <div align="center"> <%= will_paginate @articles %></div>
<% end %>

<% content_for :sidebar do %>
  <%= render :partial => "shared/tree_for_users" %>

  <div id="product_data" style="float:left;width:75%">
  </div>
  <div style="clear:both;"></div>

  <div id="edit_product">

  </div>
<% end %>




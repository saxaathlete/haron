<% content_for :title do %>
  Харон.Обратная связь
<% end %>
<% content_for :sidebar do %>
  <%= render :partial => "shared/tree_for_users" %>

  <div id="product_data" style="float:left;width:75%">
  </div>
  <div style="clear:both;"></div>

  <div id="edit_product">

  </div>
<% end %>
<% content_for :content do %>
  <h2>Введите контактную информацию и сообщение</h2>
  <% form_for @order, :url => {:action => 'save_order'}  do |f| %>
    <%= f.error_messages %>


      <%= f.label :Имя %><br/>
      <%= f.text_field :first_name %><br/>

  
      <%= f.label :Фамилия %><br/>
      <%= f.text_field :last_name %><br/>

    
      <%= f.label :Email %><br/>
      <%= f.text_field :email %><br/>
    
      <%= f.label :Телефон %><br/>
      <%= f.text_field :telephone %><br/>
    
      <%= f.label :Город %><br/>
      <%= f.text_field :city %><br/>
    
      <%= f.label :Область %><br/>
      <%= f.select(:region, Order::REGIONS.map{|item| [item, item]}, {:include_blank => true})%><br/>
    
      <%= f.label "Почтовый индес" %><br/>
      <%= f.text_field :post_index %><br/>
    
      <%= f.label :Адрес %><br/>
      <%= f.text_area :address, :rows => 3, :cols => 40 %><br/>
   
      <%= f.label :Сообщение %><br/>
      <%= f.text_area :message, :rows => 3, :cols => 40 %><br/>
    
      <%= f.label "Введи символы на картинке" %><br/>
      <img src="/images/captchas/<%= session[:captcha] %>.jpg" />
      <%= text_field_tag(:captcha) %><br/>
 



   <%= f.submit "Отправить" %>
  <% end %>
<% end %>


<% content_for :title do %>
  Харон.Оформить заказ
<% end %>
<% content_for :header do %>
  <h1 class="title">Оформить заказ</h1>
<% end %>
<% content_for :content do %>

  <% form_for @order, :url => {:action => 'save_order'}  do |f| %>
    <%= f.error_messages %>

    <div class="field">
      <%= f.label :Имя %>
      <%= f.text_field :first_name, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Отчество %>
      <%= f.text_field :middle_name, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Фамилия %>
      <%= f.text_field :last_name, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Email %>
      <%= f.text_field :email, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Телефон %>
      <%= f.text_field :telephone, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Город %>
      <%= f.text_field :city, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Область %>
      <%= f.select(:region, Order::REGIONS.map{|item| [item, item]}, {:include_blank => true}, :class => "select")%>
    </div>
    <div class="field">
      <%= f.label "Почтовый индес" %>
      <%= f.text_field :post_index, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Адрес %>
      <%= f.text_area :address, :rows => 3, :cols => 40, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label :Сообщение %>
      <%= f.text_area :message, :rows => 3, :cols => 40, :class => "input" %>
    </div>
    <div class="field">
      <%= f.label "Введи символы на картинке" %><br/>
      <img src="/images/captchas/<%= session[:captcha] %>.jpg" />
      <%= text_field_tag :captcha, nil, :class => "input" %>
    </div>
    <%= f.submit "Отправить", :class => "button" %>
  <% end %>
<% end %>
<% content_for :sidebar do %>
  <%= render :partial => "shared/tree_for_users" %>

  <div id="product_data" style="float:left;width:75%">
  </div>
  <div style="clear:both;"></div>

  <div id="edit_product">

  </div>
<% end %>
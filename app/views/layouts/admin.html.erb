<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
  <head>
    <title><%= h(yield(:title) || "Харон") %></title>

    <%= stylesheet_link_tag 'default.css' %>

    <%= javascript_include_tag 'jquery.js' %>
    `
    <script language="JavaScript">
      var $j = jQuery.noConflict();
    </script>
    <%= javascript_include_tag 'prototype.js' %>
    <%= javascript_include_tag :defaults %>

    <%= javascript_include_tag "startstop-slider.js" %>

    <%= javascript_include_tag 'jquery.galleriffic.js' %>


    <%= include_tiny_mce_if_needed %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="logo-wrap">
      <div id="logo">
        <%= link_to((image_tag "/images/logo_haron.jpg", :alt => "Харон - специализированная похоронная служба"), home_index_path) %>
      </div>
      <%= render :partial => 'shared/main_many' %>
    </div>

    <div id="admin_header"> </div>

    <div id="wrapper">
      <div id="wrapper-btm">
        <div id="page">
          <div id="admin_content">
            <div id="small_admin_content">
              <%- flash.each do |name, msg| -%>
                <%= content_tag :div, msg, :id => "flash_#{name}" %>
              <%- end -%>
            </div>
            <%- if show_title? -%>
              <h1><%=h yield(:title) %></h1>
            <%- end -%>

            <%= yield %>

          </div>
          <div style="clear:both;"></div>

        </div>
      </div>
    </div>
    <!-- start footer -->
    <div id="footer">
      <div id="footer-wrap">
        <div id="admin_menu-f">

          <ul>
            <% app_menu.each do |item|%>
              <%if item[:controller].to_s == controller.controller_path.to_s%>
                <li class="current_page_item"><%= link_to  item[:name], eval(item[:path]) %></li>
              <%else%>
                <li><%= link_to  item[:name], eval(item[:path]) %></li>
              <%end%>
            <%end%>
          </ul>

        </div>
        <p id="legal">(c) 2010 Харон.</p>
      </div>
    </div>
    <!-- end footer -->
  </body>
</html>

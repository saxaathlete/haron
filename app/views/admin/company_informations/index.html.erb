<% title "О нас" %>

<% content_for :sidebar do %>
  <span><%= link_to "Добавить инофрмацию", new_admin_company_information_path %></span>
<% end %>
<% content_for :content do %>
  <% for company_information in @company_informations %>

    <%= company_information.information %>
    <div style="clear:both;"></div>
    <div style="float: right; margin-bottom: 20px;">
      <%= link_to "Редактировать", edit_admin_company_information_path(company_information) %>
      <%= link_to "Удалить", admin_company_information_path(company_information), :confirm => 'Вы уверены?', :method => :delete %>
    </div>
    <div style="clear:both;"></div>
  <% end %>
<% end %>




<% form_for([:admin, @product], :html => { :multipart => true}  )do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag  :parent_id, params[:parent_id] %><br/>
 
    <%= f.label :Название %><br/>
    <%= f.text_field :title %><br/>
 
    <%= f.label :Описание %><br/>
    <%= f.text_area :description, :cols => '80', :class => "mceEditor" %><br/>
 
    <%= f.label :Изображение %><br/>
    <%= f.file_field :product_photo %><br/>

  <%= f.submit "Создать" %><br/>
<% end %>
<%= link_to "Назад", admin_products_path %><br/>
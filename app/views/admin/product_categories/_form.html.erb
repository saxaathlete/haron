<% form_for([:admin, @product_category], :html => { :multipart => true}) do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag :parent_id, @category.id %>

  <p>
    <%= f.label "Родительская категория:"%>&nbsp;&nbsp;
    <%= h @category.category_name%>
  </p>
  <p>
    <%= f.label "Название категории" %><br />
    <%= f.text_field :category_name%>
  </p>
  <p>
    <%= f.label :Описание %><br />
    <%= f.text_area :description, :cols => '120', :class => "mceEditor" %>
  </p>
  <p>
    <%= f.label :Изображение%><br />
    <%= f.file_field :category_photo %>
  </p>
  <p>
    <%= f.check_box :show_slide %>
    <%= f.label "Показывать в слайдах" %><br />
  </p>

  <p><%= f.submit "Создать" %></p>
<% end %>
<p><%= link_to "Назад", admin_products_path %></p>